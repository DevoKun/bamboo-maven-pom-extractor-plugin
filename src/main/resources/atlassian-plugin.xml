<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
    </plugin-info>

    <!-- internationalize your plugin -->
    <resource type="i18n" name="com.davidehringer.atlassian.bamboo.maven language" location="english"/>

    <taskType name="Maven POM Property Extractor" class="com.davidehringer.atlassian.bamboo.maven.MavenVariableTask" key="maven-pom-parser-plugin">
      <description>Extracts values from Maven POMs and sets Plan variables using the values.</description>
      <category name="builder"/>
      
      <configuration class="com.davidehringer.atlassian.bamboo.maven.MavenVariableTaskConfigurator"/>
      
      <resource type="freemarker" name="edit" location="editMavenVariableTask.ftl"/>
    </taskType>
</atlassian-plugin>
